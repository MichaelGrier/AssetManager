@model CPRG214.AssetManager.Presentation.Models.AddAssetTypeViewModel

@{
    ViewData["Title"] = "Create";
}

<h3>Add Asset Type</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Asset Type" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="text-secondary" asp-controller="Asset" asp-action="Search">Back to Current Assets</a>
</div>

